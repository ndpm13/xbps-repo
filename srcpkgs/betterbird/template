# Template file for 'betterbird'
pkgname=betterbird
_pkgname=betterbird
version=115.11.0
revision=1
_bbver=bb28
archs="x86_64"
hostmakedepends="tar"
short_desc="EN-US - Betterbird is a fine-tuned version of Mozilla Thunderbird"
maintainer="Burak <burakvoid@proton.me>"
license="MPL-2.0"
homepage="https://www.betterbird.eu/"
distfiles="https://www.betterbird.eu/downloads/LinuxArchive/${_pkgname}-${version}-${_bbver}.en-US.linux-x86_64.tar.bz2"
checksum=ec32dba22f748ba3c633326b577cd1a473f9121d3666ae01ce41ece5d288d305
nostrip=yes
nopie=yes
pre_install() {
	vmkdir usr/lib/${_pkgname}
	vmkdir usr/bin
}
do_install() {
	vcopy "*" usr/lib/${_pkgname}
	vinstall ${FILESDIR}/${_pkgname}.desktop 644 usr/share/applications/

}
post_install() {
	ln -s "/usr/lib/betterbird/betterbird" "${DESTDIR}/usr/bin/betterbird"
	for i in 16 22 24 32 48 64 128 256; do
		mkdir -p "${DESTDIR}/usr/share/icons/hicolor/${i}x${i}/apps"
		ln -s "/usr/lib/betterbird/chrome/icons/default/default${i}.png" \
		  "${DESTDIR}/usr/share/icons/hicolor/${i}x${i}/apps/${_pkgname}.png"
	done
}
